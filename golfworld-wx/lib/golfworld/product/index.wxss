.product {
    position: relative;
    box-sizing: border-box;
    padding: 8px 16px;
    /*padding: var(--card-padding, 8px 16px);*/
    font-size: 12px;
    /*font-size: var(--card-font-size, 12px);*/
    color: #323233;
    color: var(--card-text-color, #323233);
    background-color: #fafafa;
    background-color: var(--card-background-color, #fafafa)
}

.product__header {
    display: -webkit-flex;
    display: flex
}

.product__header--center {
    -webkit-align-items: center;
    align-items: center;
    -webkit-justify-content: center;
    justify-content: center
}

.product__thumb {
    position: relative;
    -webkit-flex: none;
    flex: none;
    width: 90px;
    width: var(--card-thumb-size, 90px);
    height: 90px;
    height: var(--card-thumb-size, 90px);
    margin-right: 8px;
    margin-right: var(--padding-xs, 8px)
}

.product__thumb:empty {
    display: none
}

.product__img {
    width: 100%;
    height: 100%
}

.product__content {
    position: relative;
    -webkit-flex: 1;
    flex: 1;
    min-width: 0
}

.product__desc, .product__title {
    word-wrap: break-word
}

.product__title {
    font-weight: 700;
    line-height: 16px;
    line-height: var(--card-title-line-height, 16px)
}

.product__desc {
    line-height: 20px;
    line-height: var(--card-desc-line-height, 20px);
    color: #646566;
    color: var(--card-desc-color, #646566)
}

.product__bottom {
    line-height: 20px
}

.product__price {
    display: inline-block;
    font-weight: 700;
    color: #ee0a24;
    color: var(--card-price-color, #ee0a24)
}

.product__origin-price {
    display: inline-block;
    margin-left: 5px;
    text-decoration: line-through;
    font-size: 10px;
    font-size: var(--card-origin-price-font-size, 10px);
    color: #646566;
    color: var(--card-origin-price-color, #646566)
}

.product__num {
    float: right
}

.product__tag {
    position: absolute;
    top: 2px;
    left: 0
}

.product__footer {
    -webkit-flex: none;
    flex: none;
    width: 100%;
    text-align: right
}