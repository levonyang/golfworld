@import '../../common/index.wxss';

.van-product {
    position: relative;
    box-sizing: border-box;
    padding: 8px 16px;
    font-size: var(--product-font-size, 12px);
    /*color: #323233;*/
    /*background-color: #fdfdfd;*/
    /*background-color: var(--product-background-color, #fafafa)*/
}

.product_status {
    display: flex;
    flex-direction: row;
    color: #999 !important;
    font-size: 10rpx;

}

.van-product__header {
    display: -webkit-flex;
    display: flex;
    flex-direction: row;
    /*justify-content: space-around;*/
}

.van-product__header--center {
    -webkit-align-items: center;
    align-items: center;
    -webkit-justify-content: center;
    justify-content: center
}

.van-product__thumb {
    position: relative;
    -webkit-flex: none;
    flex: none;
    width: 90px;
    width: var(--product-thumb-size, 90px);
    height: 90px;
    height: var(--product-thumb-size, 90px);
    margin-right: 8px;
    margin-right: var(--padding-xs, 8px)
}

.van-product__thumb:empty {
    display: none
}

.van-product__img {
    width: 100%;
    height: 100%
}

.van-product__content {
    margin-left: 60rpx;
}
.van-product__desc, .van-product__title {
    word-wrap: break-word
}
.van-product_rate , .van-product__bottom{
    padding-top:10rpx !important;
}

.van-product__title {
    margin-top: 30rpx;
    font-weight: 700;
    line-height: 16px;
    line-height: var(--product-title-line-height, 16px)
}

.van-product__desc {
    line-height: 20px;
    line-height: var(--product-desc-line-height, 20px);
    color: #646566;
    color: var(--product-desc-color, #646566)
}

.van-product__bottom {
    line-height: 20px
}
.product__status_item{
    display: inline-block;
    margin-left: 10rpx;
    margin-top: 10rpx;
    font-size: 12px;
    /*font-size: var(--product-origin-price-font-size, 10px);*/
    color: #659ebb;
}
.van-product__price {
    display: inline-block;
    font-weight: 700;
    color: #ee0a24;
    color: var(--product-price-color, #ee0a24)
}

.van-product__origin-price {
    display: inline-block;
    margin-left: 5px;
    text-decoration: line-through;
    font-size: 10px;
    font-size: var(--product-origin-price-font-size, 10px);
    color: #646566;
    color: var(--product-origin-price-color, #646566)
}

.van-product__num {
    float: right
}

.van-product__tag {
    position: absolute;
    top: 2px;
    left: 0
}

.van-product__footer {
    -webkit-flex: none;
    flex: none;
    width: 100%;
    text-align: right
}