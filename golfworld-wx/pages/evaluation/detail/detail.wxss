}

.task-title {
    overflow: hidden;
    text-overflow: ellipsis;
    width: 80rpx;
    height: 28rpx;
    font-size: 20rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    line-height: 28rpx;
}

