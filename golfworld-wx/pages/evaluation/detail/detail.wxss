/* 体验中 */
.evaluation-in-progress {
    padding: 60rpx 0 40rpx 40rpx;
    width: 100%;
    height: 2452rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 30rpx;
}

.progress-title {
    margin-bottom: 42rpx;
    width: 128rpx;
    height: 44rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: rgba(51, 51, 51, 1);
    line-height: 44rpx;
}

.task {
    display: flex;
    min-width: 700rpx;
    text-align: center;
    align-items: center;
    /*justify-content: flex-start;*/
    flex-basis: 30rpx;
    flex-flow: row wrap;
    align-content: flex-start;
    /*justify-content: space-between;*/
}

.task .task-item {
    margin-right: 30rpx;
    display: flex;
    flex-direction: column;
    padding: 20rpx auto;
    justify-content: center;
    text-align: center;
    align-items: center;
    margin-bottom: 30rpx;
    min-width: 140rpx;
    width: 140rpx;
    height: 140rpx;
    border-radius: 10rpx;
    background: rgba(255, 255, 255, 1);
}


.noselected {
    border: 2rpx solid rgba(207, 207, 207, 1);
}

.noselected view {
    color: rgba(207, 207, 207, 1);
}

.selected {
    border: 2rpx solid rgba(63, 185, 142, 1);
}

.selected view {
    color: rgba(63, 185, 142, 1);
}

.task-all {
    margin-right: 30rpx;
    width: 140rpx;
    min-width: 140rpx;
    display: flex;
    writing-mode: vertical-rl;
    flex-direction: column;
    padding: 20rpx auto;
    justify-content: center;
    text-align: center;
    align-items: center;
    flex-basis: 30rpx;
    margin-bottom: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    height: 140rpx;
    background: rgba(63, 185, 142, 1);
    border-radius: 10rpx;
    color: white;
    border: 2rpx solid rgba(207, 207, 207, 1);
}


.task-date-range-week {
    width: 90rpx;
    height: 22rpx;
    font-size: 16rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    line-height: 22rpx;
}

.task-date-range {
    margin: 6rpx;
    width: 96rpx;
    height: 44rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
