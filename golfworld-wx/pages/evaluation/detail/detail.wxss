/*申请中*/
.evaluation-applying {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    text-align: center;
    background-color: #979797;
    height: 100%;
    width: 100%;
}

.evaluation-applying-item {
    margin: 40rpx;
    padding: 34rpx 40rpx 30rpx 40rpx;
    width: 670rpx;
    height: 560rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
}

.evaluation-applying-title {
    display: flex;
    flex-direction: row;

}

