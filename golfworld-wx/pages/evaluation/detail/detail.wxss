    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: rgba(51, 51, 51, 1);
    line-height: 40rpx;
}


.evaluation-applying-content {
    /*margin: 22rpx 0rpx;*/
