page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.order-product {
  margin-top: 20rpx;
  background: #fff;
}

.order-product .h {
  height: 93.75rpx;
  line-height: 93.75rpx;
  margin-left: 31.25rpx;
  border-bottom: 1px solid #f4f4f4;
  padding-right: 31.25rpx;
}

.order-product .h .label {
  float: left;
  font-size: 30rpx;
  color: #333;
}

.order-product .h .status {
  float: right;
  font-size: 30rpx;
  color: #b4282d;
}

.order-product .item {
  display: flex;
  align-items: center;
  height: 192rpx;
  margin-left: 31.25rpx;
  padding-right: 31.25rpx;
  border-bottom: 1px solid #f4f4f4;
}

.order-product .item:last-child {
  border-bottom: none;
}

.order-product .item .img {
  height: 145.83rpx;
  width: 145.83rpx;
  background: #f4f4f4;
}

.order-product .item .img image {
  height: 145.83rpx;
  width: 145.83rpx;
}

.order-product .item .info {
  flex: 1;
  height: 145.83rpx;
  margin-left: 20rpx;
}

.order-product .item .t {
  margin-top: 8rpx;
  height: 33rpx;
  line-height: 33rpx;
  margin-bottom: 10.5rpx;
}

.order-product .item .t .name {
  display: block;
  float: left;
  height: 33rpx;
  line-height: 33rpx;
  color: #333;
  font-size: 30rpx;
}

.order-product .item .t .number {
  display: block;
  float: right;
  height: 33rpx;
  text-align: right;
  line-height: 33rpx;
  color: #333;
  font-size: 30rpx;
}

.order-product .item .attr {
  height: 29rpx;
  line-height: 29rpx;
  color: #666;
  margin-bottom: 25rpx;
  font-size: 25rpx;
}

.order-product .item .price {
  display: block;
  float: left;
  height: 30rpx;
  line-height: 30rpx;
  color: #333;
  font-size: 30rpx;
}