}

.avatar {
    top: -300rpx;
    right: 5%;
    z-index: 1000;
    margin: 0 auto;
    position: relative;
    height: 200rpx;
    width: 200rpx;
    border-radius: 50%;
}


.profile {
    display: flex;
    flex-direction: column;
    /*justify-content: center;*/
    align-items: center;
    position: relative;
    margin-left: 40rpx;
    margin-right: 40rpx;
    padding: 20rpx;
    top: -400rpx;
    background: #fff;
    border-radius: 18rpx;
    z-index: 998;
    height: 500rpx;
    /* border-top: 1px solid #f4f4f4; */
}

.description {
    display: flex;
    flex-direction: row;
    position: relative;
    top: 170rpx;
}



.profile_login {
    position: relative;
    top: 200rpx;
    font-size: 30 prx;
    font-weight: bold;
}

.vip_score {
    display: flex;
    flex-direction: row;
    position: relative;
    top: 200rpx;
}

.vip_score image {
    margin: 12rpx;
    line-height: 30rpx;
    width: 30rpx;
    height: 30rpx;
}

.vip_score view {
    color: #c37209 !important;
}


.profile_info {
    top: 260rpx;
    position: relative;
    display: flex;
    width: 100%;
    justify-content: space-around;
}

.user_info_item {
    align-content: center;
    align-items: center;
    display: flex;
    justify-content: center;
    flex-direction: column;
    width: 100%;
}

.left_border {
    border-right: 1px solid #f4f4f4;
}

.user_area {
    top: -400rpx;
    position: relative;
    margin-left: 40rpx;
    margin-right: 40rpx;
    padding: 20rpx;
    margin-top: 60rpx;
    background: #fff;
    border-radius: 18rpx;
}

.user_row {
    background: white;
    border-bottom: 1px solid #fafafa;
}

.user_row_left {
    /* border: 1px solid #757575; */
    float: left;
    height: 86rpx;
    font-weight: 550;
    line-height: 86rpx;
    margin-left: 35rpx;
    font-size: 26rpx;
    letter-spacing: 1rpx;
}

.user_row_right {
    /* border: 1px solid #757575; */
    float: right;
    height: 40rpx;
    width: 40rpx;
    font-weight: 550;
    line-height: 86rpx;
    margin-top: 28rpx;
    margin-right: 30rpx;
}

.user_column {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 16rpx 16rpx 16rpx;
}


.user_column_icon {
    z-index: 900;
    margin-right: 400rpx;
    height: 60rpx;
    width: 60rpx;
}

.user_column_item {
    width: 30%;
    background: #fff;
    text-align: center;
    position: relative;
}

.user_column_item_badge {
    height: 28rpx;
    width: 28rpx;
    position: absolute;
    background: #b4282d;
    color: #fff;
    border-radius: 50%;
    margin-top: 20rpx;
    margin-left: 40rpx;
}

.user_column_item_image {
    width: 55rpx;
    height: 55rpx;
}

.user_column_item_text {
    /* border: 1px solid black; */
    /*margin-top: 5rpx;*/
    font-size: 38rpx;
    color: #555;
}

.separate {
    background: #e0e3da;
    width: 100%;
    height: 6rpx;
}

.user_column_item_phone {
    width: 30%;
    height: 140rpx;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    float: left;
    background: #fff;
    border-radius: 0;
}

.user_column_item_phone::after {
    border: none;
    border-radius: 0;
}

.logout {
    margin-top: 30rpx;
    height: 100rpx;
    width: 100%;
    line-height: 100rpx;
    text-align: center;
    background: #fff;
    color: red;
    font-size: 30rpx;
}
