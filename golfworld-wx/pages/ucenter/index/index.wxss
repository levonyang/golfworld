.container {
    background: #f4f4f4;
    height: auto;
    overflow: hidden;
    width: 100%;
}

.header_background {
    width: 100%;
    height: 200rpx;
    object-fix: fill;
}

.header_background1 {
    margin: 0 auto;
    width: 100%;
    height: 450rpx;
    background-color: #f8f8f8;
    /*background-image: url(/static/images/my-background.png);*/
    background-repeat: no-repeat;
    background-size: cover;
}

.profile_img_bg {
    margin: 0 auto;
    top: -230rpx;
    left: 29.8%;
    /*width: 80%;*/
    height: 320rpx;
    width: 320rpx;
    z-index: 999;
    position: relative;
    /*background-color: #ffffff;*/
