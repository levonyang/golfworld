}

.all-talk {
    width: 400rpx;
    margin: 30rpx 0;
    padding: 30rpx;
}

.all-talk-content {
    margin-top: 20rpx;
    display: flex;
    flex-wrap: wrap;
    padding-left: 0;
}

.all-talk-content view {
    color: #7ba2a8;
    text-align: center;
    padding: 5rpx;
    margin: 10rpx 10rpx;
    background-color: #F5F1F6;
    list-style: none;
    flex: 0 0 20%;
    border-radius: 10rpx;
}

.topic {
