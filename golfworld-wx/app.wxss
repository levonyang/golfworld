/**app.wxss**/
pages {
    /*position: relative;*/
    width: 100%;
    z-index: 9999998;
    background: #fff;
}
.container {
    width: 100%;
    /*height: 100%;*/
    box-sizing: border-box;
    /*background-color: #f4f4f4;*/
    padding: 30rpx;
    font-family: PingFangSC-Light, helvetica, 'Heiti SC';
}

view, image, text, navigator {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
}

view, text {
    font-family: PingFangSC-Light, helvetica, 'Heiti SC';
    font-size: 29rpx;
    color: #333;
}
.padding-15px{
   padding: 15rpx;
}
.margin-top{
    margin-bottom: 30rpx;
}

.grey_text {
    color: #999;
}

.golden_text {
    color: #c37209
}

.bottom_border {
    border-bottom: 1px solid #f4f4f4;
}

.empty_background {
    display: block;
    margin-top: 180rpx;
    margin-left: auto;
    margin-right: auto;
}

.go_search {
    display: block;
    width: 200rpx;
    height: 50rpx;
    margin-top: 60rpx;
    margin-left:auto;
    margin-right:auto;
}
.selected-border {
    border-bottom: 5rpx #ff9c02 solid;
    color: #333 !important;
}

.top-right-label {
    line-height: 30rpx;
    font-size: 15rpx;
    position: relative;
    top: -15rpx;
}

.grey_background {
    background-color: #f8f8f8
}

.border_radio {
    border-radius: 20rpx;
}

.flex_column {
    display: flex;
    flex-direction: column;
}

.flex_row {
    display: flex;
    flex-direction: row;
}

.justify-between {
    justify-content: space-between;
}

.justify-around {
    justify-content: space-around;
}

.justify-center {
    justify-content: center;
}

.background-color {
    background-color: #fbfbfb;
}

.sub-text-color {
    color: #7ba2a8;
}

.margin-right-20rpx {
    margin-right: 20rpx;
}

.left-icon {
    height: 40rpx;
    width: 50rpx;
}
.load-more {
    border-top: 1px solid #f4f4f4;
    padding: 20rpx;
    height: 80rpx;
    text-align: center;
    justify-content: center;
    align-items: center;
}
.load-more-text{
    margin-right: 8rpx;
    color: #719ba3;
}

.loading{
    width: 30rpx;
    height: 30rpx;
}
.font-bold{
    font-weight: bold;
}